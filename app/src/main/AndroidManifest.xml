<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.dankstuffcorporation.tic_tac_droid">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".jeu.outils.MonApplication">

        <activity android:name=".jeu.activites.MenuPrincipal"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".jeu.activites.FinDuJeu"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".jeu.activites.Jeu"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".jeu.activites.Options"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".jeu.activites.SelectionNombreDeJoueurs"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".jeu.activites.Statistiques"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".jeu.activites.Aide"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>

    </application>

</manifest>
